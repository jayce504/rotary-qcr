<head>
    <%- include ./partials/header %>
    <style>
        body {
            padding-top:100px; 
        }
    </style>
</head>
<body>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <h1 class="text-center mb-3">
                I see you've decided to drink the Koolaid. Congrats.
            </h1>
            <% include ./partials/messages %>
            <form action="/users/register" method="POST">
              <div class="form-group">
                <label for="name">First Name</label>
                <input
                  type="name"
                  id="firstName"
                  name="firstName"
                  class="form-control"
                  placeholder="Enter your...wait for it....first name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                />
              </div>
              <div class="form-group">
                    <label for="name">Last Name</label>
                    <input
                      type="name"
                      id="lastName"
                      name="lastName"
                      class="form-control"
                      placeholder="You know what goes here"
                      value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
                    />
                  </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="If it's hotmail or yahoo I'm totally judging"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="I bet you use one password for everything, don't you?"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Pro tip - Ctrl+C, Ctrl+V doesn't work here"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block">
                "Abandon all hope ye who enter here"
              </button>
            </form>
            <!-- <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p> -->
          </div>
        </div>
</body>